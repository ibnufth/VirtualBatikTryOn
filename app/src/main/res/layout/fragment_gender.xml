<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gender.GenderFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/female"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_female_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:src="@drawable/btn1"/>

        <ImageButton
            android:id="@+id/btn_female_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/btn_female_1"
            app:layout_constraintTop_toTopOf="@+id/btn_female_1"
            android:src="@drawable/btn2" />

        <ImageButton
            android:id="@+id/btn_female_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/btn_female_2"
            app:layout_constraintTop_toTopOf="@+id/btn_female_1"
            android:src="@drawable/btn3" />

        <ImageButton
            android:id="@+id/btn_female_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@+id/btn_female_1"
            app:layout_constraintTop_toBottomOf="@+id/btn_female_1"
            android:src="@drawable/btn1" />

        <ImageButton
            android:id="@+id/btn_female_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="@+id/btn_female_2"
            app:layout_constraintTop_toTopOf="@+id/btn_female_4"
            android:src="@drawable/btn2" />

        <ImageButton
            android:id="@+id/btn_female_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="@+id/btn_female_3"
            app:layout_constraintTop_toTopOf="@+id/btn_female_5"
            android:src="@drawable/btn3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/male"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/btn_female_4" />

        <ImageButton
            android:id="@+id/btn_male_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:src="@drawable/btn1" />

        <ImageButton
            android:id="@+id/btn_male_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/btn_male_1"
            app:layout_constraintTop_toTopOf="@+id/btn_male_1"
            android:src="@drawable/btn2" />

        <ImageButton
            android:id="@+id/btn_male_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/btn_male_2"
            app:layout_constraintTop_toTopOf="@+id/btn_male_1"
            android:src="@drawable/btn3" />

        <ImageButton
            android:id="@+id/btn_male_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/btn_male_1"
            android:src="@drawable/btn1"/>

        <ImageButton
            android:id="@+id/btn_male_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="@+id/btn_male_2"
            app:layout_constraintTop_toTopOf="@+id/btn_male_4"
            android:src="@drawable/btn2" />

        <ImageButton
            android:id="@+id/btn_male_6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="@+id/btn_male_3"
            app:layout_constraintTop_toTopOf="@+id/btn_male_5"
            android:src="@drawable/btn3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>